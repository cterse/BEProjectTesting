package test;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Test {
	PrintWriter printWriter;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		File file = new File("test.txt");
		
		//Writing to a file
		try {
			printWriter = new PrintWriter(file);
			printWriter.print("This is a test sentence. ");
			printWriter.print("This is just to see where the second sentence goes. ");
			printWriter.close();
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		//Reading from a file
		try {
			Scanner t = new Scanner(file);
			System.out.println();
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		//Using FormSentences class
		List<String> sentenceList = new ArrayList<String>();
		try {
			sentenceList = FormSentences.getSentences("anotherTest.txt");
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		for(int i=0; i<sentenceList.size(); i++) {
			System.out.println(sentenceList.get(i));
		}
		
		//Create a file containing separate sentences
		file = new File("sentences.txt");
		for(int i=0; i<sentenceList.size(); i++) {
			printWriter.println(sentenceList.get(i));
		}
	}

}
