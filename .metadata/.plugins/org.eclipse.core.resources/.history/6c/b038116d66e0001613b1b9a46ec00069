package deepakasks;

import java.util.Scanner;

public class NumberOfOnesNaive {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner t = new Scanner(System.in);
		int n = t.nextInt();
		
		int count = 0;
		for(int i=1; i<=n; i++) {
			String temp = getBinaryString(i);
			int numberOfOnes = getNumberOfOnes(temp);
			count += numberOfOnes;
		}
		System.out.println(count);
	}

	private static int getNumberOfOnes(String temp) {
		// TODO Auto-generated method stub
		int count = 0;
		for(int i=0; i<temp.length(); i++)
			if(temp.charAt(i) == '1')
				count++;
		return count;
	}

	private static String getBinaryString(int i) {
		// TODO Auto-generated method stub
		
		return null;
	}

}
