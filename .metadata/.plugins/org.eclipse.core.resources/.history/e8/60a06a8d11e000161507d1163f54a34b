package deepakasks;

import java.util.Scanner;

public class NumberOfOnes {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner t = new Scanner(System.in);
		int n = t.nextInt();
		
		int count = 2;
		for(int i=n; i>=2; i--) {
			count = count + i;
			for(int j=i-1; j>=2; j--) {
				count = count + j * (i-1);
			}
		}
	}

}
