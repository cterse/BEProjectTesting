	public static void addFullstops(File file) {
		Scanner t = null;
		try {
			t = new Scanner(file);
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		List<String> sentences = new ArrayList<String>();
		while( t.hasNextLine() ) {
			sentences.add(t.nextLine());
		}
		
