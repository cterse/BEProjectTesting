package test;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class AddFullstopsToFile {
	
	public static void addFullstops(File file) {
		Scanner t = null;
		try {
			t = new Scanner(file);
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		List<String> sentences = new ArrayList<String>();
		while( t.hasNextLine() ) {
			sentences.add(t.nextLine());
		}
		
		for(int i=0; i<sentences.size(); i++) {
			sentences.add(i, sentences.remove(i).trim());
			System.out.println(sentences.get(i));
		}
		
		for(int i=0; i<sentences.size(); i++) {
			String temp1 = sentences.get(i);
			String temp2 = sentences.get(i+1);
			char endChar = '0';
			if( temp1.charAt(temp1.length()-1) != '.' || temp1.charAt(temp1.length()-1) != '?' || temp1.charAt(temp1.length()-1) != '!' ) {
				char endChar = temp2.charAt(temp2.length()-1);
				temp1 = temp1 + endChar;
			}
			temp2 = temp2.substring(0, temp2.length()-2);
			temp2 = temp2 + endChar;
		}
		
	}
	
	public static void main(String[] args) {
		File file = new File("andRemovedSentences.txt");
		addFullstops(file);
	}
}
